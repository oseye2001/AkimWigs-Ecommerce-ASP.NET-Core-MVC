@model IEnumerable<AkimWigs.Core.Models.Product>

@{
    ViewData["Title"] = "AkimWigs – Boutique";
}
@{
    ViewData["MetaDescription"] = "Découvrez la boutique AkimWigs : lace front, closure et frontal wigs sélectionnées avec soin, adaptées aux femmes noires et métissées. Paiement sécurisé et conseils personnalisés.";
}

@if (TempData["ContactSuccess"] is string contactMsg)
{
    <div class="container mt-3 mb-2 d-flex justify-content-center">
        <div class="akim-alert">
            <span class="akim-alert-icon">✓</span>
            <span>@contactMsg</span>
        </div>
    </div>
}

<!-- HERO -->
<section class="akim-hero mb-3">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <div class="akim-hero-badge">
                    <span class="akim-hero-badge-dot"></span>
                    Nouvelle collection wigs 2025
                </div>

                <div class="akim-hero-tagline mb-2">
                    BEAUTY • CONFIDENCE • GLAM
                </div>

                <h1 class="akim-hero-title mb-3">
                    Des wigs qui épousent
                    <span class="akim-hero-highlight">ta personnalité</span>
                </h1>

                <p class="akim-hero-subtitle mb-4">
                    Lace front, closure, frontal – sélectionnées pour un rendu naturel,
                    pensées pour sublimer les femmes noires et métissées.
                </p>

                <div class="d-flex flex-wrap align-items-center gap-3 mb-3">
                    <a href="#catalogue" class="btn btn-akim-primary btn-lg px-4">
                        Découvrir les wigs 💖
                    </a>
                    <span class="small text-muted">
                        Livraison possible & conseils personnalisés via WhatsApp.
                    </span>
                </div>
            </div>

            <div class="col-lg-6 text-center">
                <div id="akimHeroCarousel"
                     class="carousel slide position-relative d-inline-block"
                     data-bs-ride="carousel">

                    <!-- Slides -->
                    <div class="carousel-inner rounded-4 overflow-hidden shadow-lg"
                         style="max-width: 420px; height: 360px;">

                        <div class="carousel-item active">
                            <img src="~/images/wigs/akim-lace-front-14-straight.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Lace Front 14 Straight" />
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/wigs/akim-lace-front-18-bodywave.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Lace Front 18 Body Wave" />
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/wigs/akim-closure-16-curly.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Closure 16 Curly" />
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/wigs/akim-closure-20-deepwave.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Closure 20 Deep Wave" />
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/wigs/akim-frontal-18-straight.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Frontal 18 Straight" />
                        </div>

                        <div class="carousel-item">
                            <img src="~/images/wigs/akim-frontal-22-bodywave.png"
                                 class="d-block w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="Akim Frontal 22 Body Wave" />
                        </div>
                    </div>

                    <!-- Flèches -->
                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#akimHeroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Précédent</span>
                    </button>

                    <button class="carousel-control-next" type="button"
                            data-bs-target="#akimHeroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Suivant</span>
                    </button>

                    <!-- Badge "+ 6 modèles" -->
                    <span class="akim-floating-badge position-absolute bottom-0 start-0 m-3 px-3 py-1 small">
                        + 6 modèles disponibles
                    </span>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- AVANTAGES -->
<section class="mb-4">
    <div class="container">
        <div class="akim-benefits">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="akim-benefit-item">
                        <div class="akim-benefit-icon">
                            💇🏾‍♀️
                        </div>
                        <div>
                            <div class="fw-semibold">Rendu naturel</div>
                            <div class="small text-muted">
                                Longueurs, textures et densités pensées pour des looks réalistes
                                au quotidien ou pour les occasions.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="akim-benefit-item">
                        <div class="akim-benefit-icon">
                            💌
                        </div>
                        <div>
                            <div class="fw-semibold">Conseil personnalisé</div>
                            <div class="small text-muted">
                                Besoin d’aide pour choisir ? Akim t’accompagne par message avant ta commande.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="akim-benefit-item">
                        <div class="akim-benefit-icon">
                            🚚
                        </div>
                        <div>
                            <div class="fw-semibold">Flexibilité & suivi</div>
                            <div class="small text-muted">
                                Réservation possible, confirmation manuelle, suivi par WhatsApp ou Instagram.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CATALOGUE -->
<section id="catalogue" class="akim-products-section">
    <div class="container">
        <h2 class="akim-section-title">Nos Wigs</h2>
        <p class="akim-section-subtitle">
            Explore la collection actuelle – clique sur “Détails” pour voir chaque wig de plus près.
        </p>

        @if (!Model.Any())
        {
            <div class="akim-product-card-home p-4 text-center">
                <p class="mb-2">La collection est en cours de mise à jour.</p>
                <p class="small text-muted mb-0">
                    Reviens bientôt ou contacte-nous pour connaître les disponibilités en temps réel.
                </p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="akim-product-card-home h-100">
                            <div class="akim-product-img-wrapper">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl"
                                         alt="@product.Name"
                                         class="w-100" />
                                }
                                else
                                {
                                    <div class="bg-secondary-subtle d-flex align-items-center justify-content-center"
                                         style="height: 260px;">
                                        <span class="text-muted small">Image à venir</span>
                                    </div>
                                }

                                <span class="akim-price-badge position-absolute bottom-0 end-0 m-2 px-3 py-1 small">
                                    @product.Price.ToString("0") $
                                </span>

                                
                            </div>

                            <div class="p-3">
                                <h5 class="fw-semibold mb-1" style="min-height: 2.5rem;">
                                    @product.Name
                                </h5>
                                <p class="akim-product-meta mb-2">
                                    @product.Length • @product.Texture • @product.Color
                                </p>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <a asp-controller="Product"
                                       asp-action="Details"
                                       asp-route-id="@product.Id"
                                       class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                                        Détails
                                    </a>

                                    <form asp-controller="Cart" asp-action="Add" method="post" class="mb-0">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-akim-primary btn-sm rounded-pill px-3">
                                            Ajouter 💖
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="akim-catalog-cta">
                <p class="mb-2 akim-contact-title">
                    Tu as une question sur une longueur, une texture ou une couleur ?
                </p>
                <p class="akim-contact-subtitle">
                    Pose ta question directement à Akim, elle te répondra par message.
                </p>

                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form asp-controller="Product" asp-action="Contact" method="post"
                              class="akim-contact-card p-3 p-md-4 text-start">
                            @Html.AntiForgeryToken()
                            <div class="mb-2">
                                <label class="form-label">Nom complet</label>
                                <input type="text" name="fullName" class="form-control form-control-sm" required />
                            </div>
                            <div class="mb-2">
                                <label class="form-label">E-mail</label>
                                <input type="email" name="email" class="form-control form-control-sm" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Ta question</label>
                                <textarea name="message" rows="3"
                                      class="form-control form-control-sm" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-akim-primary btn-sm">
                                Envoyer la question 💌
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
